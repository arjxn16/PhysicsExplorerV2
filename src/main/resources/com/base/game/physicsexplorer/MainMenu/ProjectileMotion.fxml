<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" styleClass="main-theme" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.base.game.physicsexplorer.MainMenu.ProjectileMotionFXController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <children>
        <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" styleClass="container">
            <children>
                <BorderPane prefHeight="700.0" prefWidth="1000.0">
                    <center>
                        <Canvas fx:id="simulationCanvas" height="480.0" width="720.0" BorderPane.alignment="CENTER" />
                    </center>
                </BorderPane>
                <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="250.0" styleClass="simulation-container">
                    <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <children>
                        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="382.0" prefWidth="240.0" styleClass="simulation-container, parameter-container">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                            <children>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Label prefHeight="17.0" prefWidth="123.0" text="Initial Height (m):" />
                                    <TextField fx:id="initialHeightTextField" promptText="Enter initial height" />
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Label prefHeight="17.0" prefWidth="151.0" text="Initial Velocity (m/s):" />
                                    <TextField fx:id="initialVelocityTextField" prefHeight="25.0" prefWidth="162.0" promptText="Enter Initial Velocity" />
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Label text=" Angle (°):" />
                                    <TextField fx:id="initialAngleTextField" prefHeight="25.0" prefWidth="131.0" promptText="Enter the angle" />
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Label prefHeight="17.0" prefWidth="86.0" text="Mass (kg):" />
                                    <RadioButton fx:id="lightMassRadioButton" text="Light">
                                        <toggleGroup>
                                            <ToggleGroup fx:id="massToggleGroup1" />
                                        </toggleGroup>
                                    </RadioButton>
                                    <RadioButton fx:id="heavyMassRadioButton" text="Heavy">
                                        <toggleGroup>
                                            <ToggleGroup fx:id="massToggleGroup2" />
                                        </toggleGroup>
                                    </RadioButton>
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Label prefHeight="17.0" prefWidth="95.0" text="Gravity (m/s^2):" />
                                    <VBox>
                                        <HBox>
                                            <RadioButton fx:id="earthGravityRadioButton" text="Earth">
                                                <toggleGroup>
                                                    <ToggleGroup fx:id="gravityToggleGroup" />
                                                </toggleGroup>
                                            </RadioButton>
                                            <RadioButton fx:id="marsGravityRadioButton" text="Mars" toggleGroup="$gravityToggleGroup" />
                                        </HBox>
                                        <HBox>
                                            <RadioButton fx:id="mercuryGravityRadioButton" text="Mercury" toggleGroup="$gravityToggleGroup" />
                                            <RadioButton fx:id="saturnGravityRadioButton" text="Saturn" toggleGroup="$gravityToggleGroup" />
                                        </HBox>
                                    </VBox>
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Button fx:id="startSimulationButton" onAction="#onStartSimulationButtonClick" styleClass="menu-button" text="Start " />
                                    <Button fx:id="stopSimulationButton" minHeight="38.0" onAction="#onStopSimulationButtonClick" prefHeight="38.0" prefWidth="110.0" styleClass="menu-button" text="Stop " />
                                </HBox>

                            </children>
                        </VBox>
                        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="234.0" prefWidth="240.0" styleClass="simulation-container, parameter-container">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                            <children>
                                <VBox alignment="CENTER" layoutY="-174.0" prefHeight="408.0" prefWidth="240.0">
                                    <padding>
                                        <Insets left="3.0" />
                                    </padding>
                                    <children>
                                        <Label prefHeight="400.0" prefWidth="237.0" text="Adjust initial height (0-100m), velocity (0-100m/s), and angle (0-90°) to observe how they influence the trajectory of a projectile. Note: Gravity is set to 9.8m/s (Earth's gravity), but you can also select Mars (3.71m/s), Mercury (3.71m/s), or Saturn (10.36m/s) using the toggle buttons. Reset the simulation by returning to Home and reloading the situation. Experiment with different parameters to observe their effects. Pay attention to the angle of projection for significant changes. Learn more about the laws of physics in this situation by referring to the Learn More section or the hyperlinks below." wrapText="true">
                                        </Label>
                                        <Hyperlink onAction="#openPhysicsClassroom" text="[Physics Classroom: Projectile Motion]" />
                                        <Hyperlink onAction="#openNASA" text="[NASA: Gravity and Motion]" />
                                    </children>





                                </VBox>
                            </children>
                        </Pane>
                            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onReturnToHomeButtonClick" prefHeight="20.0" prefWidth="240.0" styleClass="menu-button" text="Return To Home" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
