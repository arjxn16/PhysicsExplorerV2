<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onKeyReleased="#onKeyPressed" prefHeight="720.0" prefWidth="1280.0" styleClass="main-theme" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.base.game.physicsexplorer.MainMenu.ProjectileMotionFXController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <children>
        <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" styleClass="container">
            <children>
                <BorderPane prefHeight="700.0" prefWidth="1000.0">
                    <center>
                        <Canvas fx:id="simulationCanvas" height="480.0" onMouseDragged="#mouseDragged" onMousePressed="#mousePressed" onMouseReleased="#mouseReleased" width="720.0" BorderPane.alignment="CENTER" />
                    </center>
                </BorderPane>
                <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="250.0" styleClass="simulation-container">
                    <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <children>
                        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="382.0" prefWidth="240.0" styleClass="simulation-container, parameter-container">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                            <children>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Label prefHeight="17.0" prefWidth="123.0" text="Initial Height (m):" />
                                    <TextField fx:id="initialHeightTextField" promptText="Enter initial height" />
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Label prefHeight="17.0" prefWidth="151.0" text="Initial Velocity (m/s):" />
                                    <TextField fx:id="initialVelocityTextField" prefHeight="25.0" prefWidth="162.0" promptText="Enter Initial Velocity" />
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Label text=" Angle (Â°):" />
                                    <TextField fx:id="initialAngleTextField" prefHeight="25.0" prefWidth="131.0" promptText="Enter the angle" />
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Label prefHeight="17.0" prefWidth="86.0" text="Mass (kg):" />
                                    <RadioButton fx:id="lightMassRadioButton" text="Light">
                                        <toggleGroup>
                                            <ToggleGroup fx:id="massToggleGroup1" />
                                        </toggleGroup>
                                    </RadioButton>
                                    <RadioButton fx:id="heavyMassRadioButton" text="Heavy">
                                        <toggleGroup>
                                            <ToggleGroup fx:id="massToggleGroup2" />
                                        </toggleGroup>
                                    </RadioButton>
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Label prefHeight="17.0" prefWidth="95.0" text="Gravity (m/s^2):" />
                                    <VBox>
                                        <HBox>
                                            <RadioButton fx:id="earthGravityRadioButton" text="Earth">
                                                <toggleGroup>
                                                    <ToggleGroup fx:id="gravityToggleGroup" />
                                                </toggleGroup>
                                            </RadioButton>
                                            <RadioButton fx:id="marsGravityRadioButton" text="Mars" toggleGroup="$gravityToggleGroup" />
                                        </HBox>
                                        <HBox>
                                            <RadioButton fx:id="mercuryGravityRadioButton" text="Mercury" toggleGroup="$gravityToggleGroup" />
                                            <RadioButton fx:id="saturnGravityRadioButton" text="Saturn" toggleGroup="$gravityToggleGroup" />
                                        </HBox>
                                    </VBox>
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0" styleClass="small-text">
                                    <Button fx:id="startSimulationButton" text="Start Simulation" onAction="#onStartSimulationButtonClick" />
                                    <Button fx:id="stopSimulationButton" text="Stop Simulation" onAction="#onStopSimulationButtonClick" />
                                    <Button fx:id="resetSimulationButton" text="Reset Simulation" onAction="#onResetSimulationButtonClick" />
                                </HBox>

                            </children>
                        </VBox>
                        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="234.0" prefWidth="240.0" styleClass="simulation-container, parameter-container">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                            <children>
                                <VBox alignment="CENTER" layoutX="-3.0" prefHeight="234.0" prefWidth="240.0">
                                    <children>
                                        <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onReturnToHomeButtonClick" prefHeight="20.0" prefWidth="240.0" styleClass="menu-button" text="Return To Home" />
                                    </children>
                                    <padding>
                                        <Insets left="3.0" />
                                    </padding>
                                </VBox>
                            </children>
                        </Pane>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
